@model object

@if (ViewContext.ModelState.IsValid == false && ViewContext.ModelState.Keys.Any(k => string.IsNullOrEmpty(k)))
{
    // The alert-danger class displays the summary in a red box
    <div class="alert alert-danger mb-4" role="alert">
        <h4 class="alert-heading">Validation Errors:</h4>
        <ul class="mb-0">
            @foreach (var modelState in ViewContext.ModelState.Values)
            {
                @foreach (var error in modelState.Errors)
                {
                    // Only show errors that are not associated with a specific field (general errors)
                    if (string.IsNullOrEmpty(error.ErrorMessage) == false)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            }
        </ul>
    </div>
}