<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AfterGrad</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>

    <header class="desktop-header d-none d-lg-block">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ag-header-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <img src="~/img/ag_logo_sm.png" alt="AG Logo" style="height: 30px;" class="me-2" />
                    AfterGrad
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Requests" asp-action="Index">Consultants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Resources" asp-action="Index">Resources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Messages" asp-action="Index">Broadcast</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Settings">Settings</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link btn btn-sm btn-light text-primary px-3" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <header class="mobile-header d-lg-none ag-header-bg p-3">
        <div class="container-fluid d-flex align-items-center">
            @if (ViewData["ShowBackButton"]?.ToString() == "true")
            {
                <a href="javascript:history.back()" class="text-white me-3" style="font-size: 1.5rem;">
                    <i class="fas fa-chevron-left"></i>
                </a>
            }
            <h5 class="text-white mb-0">@ViewData["Title"]</h5>
        </div>
    </header>

    <div class="container-fluid main-content-area">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <nav class="mobile-nav-bar fixed-bottom d-lg-none ag-header-bg">
        <div class="d-flex justify-content-around p-2">
            <a asp-controller="User" asp-action="Profile" class="nav-icon"><i class="fas fa-user"></i></a>
            <a asp-controller="Requests" asp-action="Index" class="nav-icon"><i class="fas fa-plus-square"></i></a>
            <a asp-controller="Dashboard" asp-action="Index" class="nav-icon active"><i class="fas fa-home"></i></a>
            <a asp-controller="Resources" asp-action="Index" class="nav-icon"><i class="fas fa-file-alt"></i></a>
            <a asp-controller="User" asp-action="Settings" class="nav-icon"><i class="fas fa-cog"></i></a>
        </div>
    </nav>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>