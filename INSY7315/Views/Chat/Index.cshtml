@{
    ViewData["Title"] = "Chat";
    ViewData["ShowBackButton"] = "true";
}

<div class="chat-container d-flex flex-column" style="height: calc(100vh - 120px);">
    <div class="chat-messages flex-grow-1 p-3 overflow-auto">
        <p class="text-center small text-muted">Today</p>
        <div class="d-flex justify-content-start">
            <div class="bg-primary text-white p-3 rounded mb-2" style="max-width: 60%; border-bottom-left-radius: 0;">
                Hello! I need some help with my research paper.
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <div class="bg-orange text-white p-3 rounded mb-2" style="max-width: 60%; border-bottom-right-radius: 0;">
                Sure, I'm happy to assist! What specifically are you working on?
            </div>
        </div>

        <div class="d-flex justify-content-start">
            <div class="bg-primary text-white p-3 rounded mb-2" style="max-width: 60%; border-bottom-left-radius: 0;">
                <i class="fas fa-file-pdf"></i> Research_Proposal.pdf
            </div>
        </div>

    </div>

    <div class="chat-input p-3 border-top ag-card-bg">
        <form asp-action="SendMessage" method="post" class="d-flex">
            <input type="hidden" name="consultantId" value="@ViewData["ConsultantId"]" />
            <input type="text" name="message" class="form-control flex-grow-1 me-2" placeholder="Type a Message" required />

            <button type="button" class="btn btn-outline-secondary me-2"><i class="fas fa-plus"></i></button>

            <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i></button>
        </form>
    </div>
</div>