@model List<AfterGrad.Models.RequestVM>

@{
    ViewData["Title"] = "Requests";
}

<div class="container-fluid pt-3">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <h2 class="mb-4">Requests</h2>

    @foreach (var request in Model)
    {
        <div class="card ag-card-bg p-3 mb-3 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <small>Request ID: <strong>@request.RequestID</strong></small><br />
                    <small>Type: @request.RequestType</small><br />
                    <small>Student ID: @request.StudentID</small>
                </div>
                <span class="badge bg-warning text-dark">@request.Status</span>
            </div>
            <div class="mt-2 text-end">
                <a asp-action="Details" asp-route-id="@request.RequestID" class="btn btn-sm btn-primary">Details</a>
            </div>
        </div>
    }
</div>