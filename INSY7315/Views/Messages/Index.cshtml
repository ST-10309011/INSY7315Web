@model AfterGrad.Models.BroadcastMessageVM
@{
    ViewData["Title"] = "Messages";
}

<div class="container-fluid pt-3">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="row">
        <div class="col-lg-6 col-12 mb-4 order-lg-1 order-2">
                @foreach (var message in (List<BroadcastMessageVM>)ViewBag.PreviousMessages)
                {
                    <div class="card ag-card-bg p-3 mb-3 shadow-sm">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Title: @message.Title</strong><br />
                                <small>To: @message.SelectedAudience</small><br />
                                <small>Message: @(message.Message.Length > 30 ? message.Message.Substring(0, 30) + "..." : message.Message)</small>
                            </div>
                            <i class="fas fa-trash-alt text-danger"></i>
                        </div>
                    </div>
                }
        </div>

        <div class="col-lg-6 col-12 mb-4 order-lg-2 order-1">
            <div class="card ag-card-bg p-4 shadow-sm">
                <h3 class="mb-3">Broadcast Message</h3>
                <form asp-action="Broadcast" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Title" required />
                    </div>

                    <div class="form-group mb-3">
                        <input type="file" asp-for="Attachment" class="form-control" placeholder="Attachment (optional)" />
                    </div>

                    <div class="form-group mb-3">
                        <select asp-for="SelectedAudience" class="form-select" required>
                            <option value="">Select Audience</option>
                            <option value="All Students">All Students</option>
                            <option value="Consultants">Consultants</option>
                            <option value="Specific Group">Specific Group</option>
                        </select>
                    </div>

                    <div class="form-group mb-4">
                        <textarea asp-for="Message" class="form-control" rows="3" placeholder="Message" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Upload</button>
                    <button type="button" class="btn btn-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>