@model AfterGrad.Models.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="login-container d-flex justify-content-center align-items-center h-100 p-3">
    <div class="login-form-card shadow-lg p-5">
        <div class="text-center mb-4 d-lg-none">
            <img src="~/img/ag_logo_ag.png" alt="AG Logo" style="width: 80px; height: 80px;" class="mb-3" />
            <h2 class="mb-0">Login</h2>
            <p>Don't have an account? <a asp-action="SignUp">Sign up</a></p>
        </div>

        <div class="text-center mb-4 d-none d-lg-block">
            <img src="~/img/ag_logo_ag.png" alt="AG Logo" style="width: 120px; height: 120px;" class="mb-3" />
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <a asp-action="ResetPassword" class="small float-end mb-3">Reset Password</a>

            <button type="submit" class="btn btn-primary w-100">Log In</button>

            <p class="mt-3 text-center d-none d-lg-block">Don't have an account? <a asp-action="SignUp">Sign up</a></p>
        </form>
    </div>
</div>