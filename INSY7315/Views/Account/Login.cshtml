@model INSY7315.Models.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_LandingLayout"; // Assuming you have a layout specifically for the landing/auth pages
}

<div class="container login-container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="login-form-card shadow p-4 p-md-5 w-100" style="max-width: 420px;">
        <h2 class="text-center mb-4 text-dark-blue fw-bold">Login</h2>

        <partial name="_ValidationSummary" />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- FORM TAG: Posts to the [HttpPost] Login action in AccountController -->
        <form asp-controller="Account" asp-action="Login" method="post">

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block w-100 py-2 fw-bold">
                Log In
            </button>
        </form>

        <div class="text-center mt-4">
            <p class="mb-0">
                Don't have an account? <a asp-controller="Account" asp-action="SignUp" class="text-dark-blue fw-bold">Sign Up</a>
            </p>
        </div>
    </div>
</div>
