@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AfterGrad Landing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: var(--ag-light-blue);
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .logo-circle {
            background-color: white;
            border-radius: 50%;
            padding: 40px;
            margin-bottom: 50px;
        }

        .logo-container img {
            width: 150px;
            height: 150px;
        }

        .btn-large {
            width: 80%;
            max-width: 300px;
            padding: 15px;
            margin: 10px auto;
            font-size: 1.2em;
            border-radius: 25px;
        }

        .btn-primary {
            background-color: var(--ag-dark-blue);
            border-color: var(--ag-dark-blue);
        }

        .btn-light {
            color: var(--ag-dark-blue);
        }
    </style>
</head>
<body>
    <div class="logo-circle">
        <img src="~/img/ag_logo_ag.png" alt="AfterGrad Logo" />
    </div>
    <h1>AfterGrad</h1>

    <div class="button-group">
        <a asp-action="SignUp" class="btn btn-lg btn-light btn-large">Sign Up</a>
        <a asp-action="Login" class="btn btn-lg btn-primary btn-large">Log in</a>
    </div>
</body>
</html>