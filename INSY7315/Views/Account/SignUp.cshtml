@model INSY7315.Models.SignUpVM

@{
    ViewData["Title"] = "Sign Up";
    Layout = "_LandingLayout"; // Assuming you have a layout specifically for the landing/auth pages
}

<div class="container signup-container d-flex align-items-center justify-content-center min-vh-100 py-5">
    <div class="login-form-card shadow p-4 p-md-5 w-100" style="max-width: 480px;">
        <h2 class="text-center mb-4 text-dark-blue fw-bold">Create Account</h2>

        <partial name="_ValidationSummary" />

        <!-- FORM TAG: Posts to the [HttpPost] SignUp action in AccountController -->
        <form asp-controller="Account" asp-action="SignUp" method="post">

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StudentNumber" class="form-label">Student Number</label>
                <input asp-for="StudentNumber" class="form-control" placeholder="Enter your student number (e.g., 123456)" />
                <span asp-validation-for="StudentNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter a secure password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block w-100 py-2 fw-bold">
                Register
            </button>
        </form>

        <div class="text-center mt-4">
            <p class="mb-0">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-dark-blue fw-bold">Log In</a>
            </p>
        </div>
    </div>
</div>
