@model AfterGrad.Models.SignUpVM
@{
    ViewData["Title"] = "Sign Up";
}

<div class="d-flex justify-content-center align-items-center h-100 p-3">
    <div class="signup-container shadow-lg p-5">
        <div class="text-center mb-4">
            <img src="~/img/ag_logo_ag.png" alt="AG Logo" style="width: 80px; height: 80px;" class="mb-3" />
            <h2>Sign-Up</h2>
            <p>Already Have an Account? <a asp-action="Login">Sign-In</a></p>
        </div>

        <form asp-action="SignUp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <input asp-for="StudentNumber" class="form-control" placeholder="Student Number" />
                <span asp-validation-for="StudentNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign up</button>
        </form>
    </div>
</div>